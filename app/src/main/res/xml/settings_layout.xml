<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreferenceCompat
        app:key="transparentBar"
        app:singleLineTitle="false"
        app:title="Transparent background" />
    <SwitchPreferenceCompat
        app:key="sortApps"
        app:singleLineTitle="false"
        app:title="Show apps in ascending order" />
    <SwitchPreferenceCompat
        app:key="autostart"
        app:singleLineTitle="false"
        app:title="Start QuickBar on device boot" />
    <SwitchPreferenceCompat
        app:key="closeQuickBar"
        app:singleLineTitle="false"
        app:summary="Hide QuickBar when an app is launched from QuickBar"
        app:title="Hide QuickBar" />
    <SwitchPreferenceCompat
        app:key="allApps"
        app:singleLineTitle="false"
        app:summary="Show all apps in the device"
        app:title="Show all apps" />
    <SwitchPreferenceCompat
        app:key="hideLogo"
        app:singleLineTitle="false"
        app:title="Hide QuickBar logo" />
    <ListPreference
        app:defaultValue="Right"
        app:entries="@array/settings_values_quickbar_align"
        app:entryValues="@array/settings_values_quickbar_align"
        app:key="chooseSide"
        app:title="@string/settings_side" />
</androidx.preference.PreferenceScreen>